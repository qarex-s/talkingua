@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/styleRegister.css"/>

<div class="container">
    <div class="main">
        <h1>#Реєстрація</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="register-inputs">
                <input asp-for="Input.Email" class="form-control" asp-validation-for="Input.Email" autocomplete="username" aria-required="true" placeholder="Email" required>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Пароль" required>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Підтвердження паролю" required>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <input asp-for="Input.Name" class="form-control" autocomplete="Name" aria-required="true" placeholder="Псевдонім" required>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
                <input asp-for="Input.FullName" class="form-control" autocomplete="FullName" aria-required="true" placeholder="Прізвище та ім'я" required>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
                <input asp-for="Input.DateBirthd" class="form-control" aria-required="true" placeholder="Дата народження" required>
                <span asp-validation-for="Input.DateBirthd" class="text-danger"></span>
                <input asp-for="Input.City" class="form-control" autocomplete="City" aria-required="true" placeholder="Місто" required>
                <span asp-validation-for="Input.City" class="text-danger"></span>
                <input asp-for="Input.Image" type="hidden" value="https://upload.wikimedia.org/wikipedia/commons/thumb/5/59/User-avatar.svg/2048px-User-avatar.svg.png" class="form-control" />
            </div>
            <div class="hr"></div>
            <div class="submit-buttons">
                <button id="registerSubmit" type="submit">Зареєструватися</button>
                <button><a asp-area="Identity" asp-page="/Account/Login">Є аккаунт</a></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

