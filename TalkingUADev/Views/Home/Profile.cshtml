@model TalkingUADev.Util.UtilUserPost
@using TalkingUADev.Models
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <div class="text-center">
                <img class=" img-fluid circular-image shadow" src="@Model.GetUserAppUtil().Image" alt="Image">
                <div class="d-flex justify-content-center">
                    <div class="me-4">
                        <div class="fw-bold">Subs</div>
                        <div>@Model.GetUserAppUtil().CountSubs</div>
                    </div>
                    <div class="me-4">
                        <div class="fw-bold">Follows</div>
                        <div>@Model.GetUserAppUtil().CountFollows</div>
                    </div>
                    <div>
                        <div class="fw-bold">Posts</div>
                        <div>@Model.GetUserAppUtil().CountPosts</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="mb-3">
                <div class="fw-bold">Date of Birth:</div>
                <div>@Model.GetUserAppUtil().DateBirthd</div>
            </div>
            <div class="mb-3">
                <div class="fw-bold">City:</div>
                <div>@Model.GetUserAppUtil().City</div>
            </div>
            <div class="mb-3">
                <div class="fw-bold">Date of Creating:</div>
                <div>@Model.GetUserAppUtil().DateOfCreateUser</div>
            </div>
        </div>
        <div class="container">
            <div class="row row-cols-1 row-cols-md-3 g-4">

            @if (Model.GetUserPostUtil() != null)
                @foreach (UserPost item in Model.GetUserPostUtil())
                {
                    <div class="col">
                        <div class="card">
                            <img src="@item.Image" class="card-img-top" alt="@item.Name">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">Description: @item.Desc</p>
                                <p class="card-text">Likes: @item.Likes</p>
                                    <a href="@Url.Action("GetPublication", "Home", new {Id = item.UserPostId})" class="btn btn-primary">View Publication</a>

                            </div>
                        </div>
                    </div>
                    <!-- Добавьте дополнительные карточки публикаций сюда -->
            }
            </div>

        </div>
    </div>
</div>
