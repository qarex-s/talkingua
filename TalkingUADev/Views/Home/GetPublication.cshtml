@model TalkingUADev.Models.UserPost
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Image" class=" card-img-top shadow" alt="Responsive image" />
        </div>
        <div class="col-md-8">
            <h5 class="card-title fs-5">@Model.Name</h5>
            <p class="card-title fs-6">@Model.Desc</p>
            <p class ="card-title fs-6">Tags: @Model.Tags</p>
            <p class="card-title fs-6">Likes: @Model.Likes</p>
        </div>
    </div>
</div>