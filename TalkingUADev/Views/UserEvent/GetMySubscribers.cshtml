@model List<TalkingUADev.Areas.Identity.Data.UserApp>
<div class="container mt-3">
    <h1>My subscribers</h1>
    <hr>
    <div class="container">
        <div class="row">
            @foreach (var userItem in Model)
            {
                <div class="col-9">
                    <div class="card mb-3">
                        <div class="card-body d-flex align-items-center">
                            <img src="@userItem.Image" class="rounded-circle me-3" width="50" height="50" />
                            <div>
                                <h5 class="card-title">@userItem.Email</h5>
                                <p class="card-text">@userItem.Name</p>
                            </div>
                            <div class="ms-auto">
                                <a href="@Url.Action("ViewProfileUser", "UserEvent", new { userId = userItem.Id })" class="btn btn-primary">Check account</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
