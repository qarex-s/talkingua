@{
    Layout = "_Layout";
}

@using TalkingUADev.ViewModels
@model ModelPost
<link rel="stylesheet" href="~/css/styleAddPublication.css">
<div class="container">
    <h1>Додати публікацію</h1>
    <div class="hr"></div>
    <form id="registerForm" enctype="multipart/form-data" action="AddPublication" method="post">
        <div class="inputs">
            <div class="input-photo">
                <label class="input-file">
                    <input type="file" asp-for="ImageFile" accept="image/jpg,image/jpeg,image/png" aria-required="true"  />
                    <span >Виберіть файл</span>
                </label>
                <div class="view-photo"></div>
            </div>
            <div class="inputs-text">
                @*<input type="text" placeholder="Заголовок публікації" >*@
                <input asp-for="Name"  type="text" placeholder="Заголовок публікації" aria-required="true" />
                <span ></span>

                @*<textarea placeholder="Опис публікації" name="" id=""></textarea>*@
                <textarea asp-for="Desc"  placeholder="Опис публікації" aria-required="true" ></textarea>
                <span ></span>

                @*<textarea placeholder="Теги публікації"></textarea>*@
                <textarea asp-for="Tags"  placeholder="Теги публікації" aria-required="true" ></textarea>
                <span ></span>

                @*<textarea placeholder="Місце" ></textarea>*@
                <textarea asp-for="Position"  class="textareaClass" placeholder="Місце" aria-required="true"></textarea>
                <span  ></span>
                <input class="submit" type="submit" value="Додати">
            </div>
        </div>
    </form>
</div>
<script src="~/js/jquery-3.6.3Master.min.js"></script>
<script src="~/js/scriptAddPublication.js"></script>
