@model List<TalkingUADev.Models.UserPost>
<div class="container mt-3">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var postItem in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@postItem.Image" class="card-img-top" alt="@postItem.Name">
                    <div class="card-body">
                        <h5 class="card-title">@postItem.Name</h5>
                        <p class="card-text">@postItem.Tags</p>
                        <p class="card-text">Likes: @postItem.Likes</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
